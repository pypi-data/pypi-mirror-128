import sys

from MetaAssemblyImprove.version import Version
from MetaAssemblyImprove.Main import ReadPar, Main


if __name__ == "__main__":
    if len(sys.argv) == 1:
        sys.argv.append("-h")
        ReadPar.read()
    elif len(sys.argv) == 2 and "-h" in sys.argv[1]:
        ReadPar.read()
    elif len(sys.argv) == 2 and "-v" in sys.argv[1]:
        Version.show_version()
    else:
        Main.exe()
