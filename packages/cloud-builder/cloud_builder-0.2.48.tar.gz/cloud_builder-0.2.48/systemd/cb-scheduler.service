[Unit]
Description=CB Scheduler Service
After=syslog.target
Requires=network-online.target cb-fetch-once

[Service]
EnvironmentFile=-/etc/cloud_builder
Type=simple
Restart=on-failure
ExecStart=/bin/bash -c 'sudo cb-scheduler --build-limit ${CB_BUILD_LIMIT} --update-interval ${CB_UPDATE}'

[Install]
WantedBy=multi-user.target
