{
  "mappings": {
    "dynamic": "strict",
    "dynamic_templates": [
        {
          "creators": {
            "path_match": "created_by.*",
            "mapping": {
              "type": "keyword"
            }
          }
        },
        {
          "topics": {
            "path_match": "topic.*",
            "mapping": {
              "type": "keyword"
            }
          }
        },
        {
          "receivers": {
            "path_match": "receiver.*",
            "mapping": {
              "type": "keyword"
            }
          }
        }
    ],
    "properties": {
      "$schema": {
        "type": "keyword",
        "index": "false"
      },
      "version_id": {
        "type": "integer",
        "index": "false"
      },
      "id": {
        "type": "keyword"
      },
      "uuid": {
        "type": "keyword"
      },
      "external_id": {
        "type": "keyword"
      },
      "created": {
        "type": "date"
      },
      "updated": {
        "type": "date"
      },
      "closed": {
        "type": "date"
      },
      "expires_at": {
        "type": "date"
      },
      "is_expired": {
        "type": "boolean"
      },
      "request_type_id": {
        "type": "keyword",
        "index": false
      },
      "request_type": {
        "type": "keyword"
      },
      "title": {
        "type": "text"
      },
      "description": {
        "type": "text"
      },
      "status": {
        "type": "keyword"
      },
      "is_open": {
        "type": "boolean"
      },
      "payload": {
        "type": "object",
        "enabled": false
      },
      "created_by": {
        "type": "object",
        "dynamic": true
      },
      "topic": {
        "type": "object",
        "dynamic": true
      },
      "receiver": {
        "type": "object",
        "dynamic": true
      }
    }
  }
}
